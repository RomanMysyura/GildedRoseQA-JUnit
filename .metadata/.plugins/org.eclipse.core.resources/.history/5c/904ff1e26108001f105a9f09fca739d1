package com.gildedrose;

import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.assertEquals;

class GildedRoseTest {

    @Test
    void testFoo() {
        Item[] items = new Item[] { new Item("foo", 0, 0) };
        GildedRose app = new GildedRose(items);

        app.updateQuality();

        assertEquals("foo", app.getItems()[0].getName());
    }

    @Test
    void testUpdateQuality() {
        Item[] items = new Item[] { new Item("Normal Item", 5, 10),
                                     new Item("Aged Brie", 5, 10),
                                     new Item("Sulfuras, Hand of Ragnaros", 5, 80),
                                     new Item("Backstage passes to a TAFKAL80ETC concert", 5, 10),
                                     new Item("Conjured Mana Cake", 5, 10)};
        GildedRose app = new GildedRose(items);

        app.updateQuality();

        assertEquals(9, app.getItems()[0].getQuality()); // Verifica la calidad de un artículo normal
        assertEquals(11, app.getItems()[1].getQuality()); // Verifica la calidad de Aged Brie
        assertEquals(80, app.getItems()[2].getQuality()); // Verifica la calidad de Sulfuras
        assertEquals(13, app.getItems()[3].getQuality()); // Verifica la calidad de Backstage passes
        assertEquals(8, app.getItems()[4].getQuality()); // Verifica la calidad de un artículo conjurado
    }
}
